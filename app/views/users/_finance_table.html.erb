<table class="user-finances">
  <thead>
  <th>Date</th>
  <th>Change</th>
  <th>Monthly Change</th>
  <th>Balance</th>
  </thead>
  <tbody>

  <% values = user.all_balance_data %>
  <% if values %>
      <% values.each do |frow| %>
          <%= render "finance_table_row", tense: "past", frow: frow %>
      <% end %>

  <% end %>
  <tr></tr>
  <% values = user.all_prediction_data %>
  <% if values %>
      <% values.each do |frow| %>
          <%= render "finance_table_row", tense: "future", frow: frow %>
      <% end %>
      <tr></tr>
  <% end %>
  </tbody>
</table>

