<%= form_for(@transfer) do |f| %>
    <% if @transfer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@transfer.errors.count, "error") %> prohibited this transaction from being saved:</h2>

          <ul>
            <% @transfer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :on, "Date" %><br>
      <%= f.date_select :on %>
    </div>
    <div class="field">
      <%= f.label :amount %><br>
      <%= f.text_field :amount %>
    </div>
    <div class="field">
      <%= f.label :recurrence %><br>
      <%= f.select(:recurrence, options_for_select(Transfer.recurrences.keys.to_a)) %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.select(:user_id, options_for_select(@users.collect { |u| [u.name, u.id] })) %>
    </div>
    <div class="field">
      <%= f.label :outgoing %><br>
      <%= f.radio_button :outgoing, true, :checked => true, :value => true %>
      <%= f.radio_button :outgoing, false, :value => false %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
